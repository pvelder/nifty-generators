%table
  %thead
    %tr
      <%- for attribute in attributes -%>
      %th <%= attribute.column.human_name %>
      <%- end -%>
  %tbody{:id => "<%= plural_name %>" }
    = render :partial => "item", :collection => @<%= plural_name %>

<%- if actions? :new -%>
%p= link_to "New <%= singular_name.titleize %>", new_<%= singular_name %>_path
<%- end -%>
